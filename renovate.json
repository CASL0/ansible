{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "pip_requirements": {
    "enabled": false
  },
  "ignoreDeps": ["github.com/kubernetes-sigs/kubespray"],
  "packageRules": [
    {
      "groupName": "minor or patch",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
